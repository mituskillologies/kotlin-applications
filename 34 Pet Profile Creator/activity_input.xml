<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Title TextView -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Pet Profile"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="32dp" />

    <!-- Pet Name Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pet Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#555555"
        android:layout_marginBottom="8dp" />

    <!-- Pet Name EditText -->
    <EditText
        android:id="@+id/petNameEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter your pet's name"
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginBottom="24dp"
        android:textSize="14sp" />

    <!-- Pet Species Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Species"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#555555"
        android:layout_marginBottom="8dp" />

    <!-- Pet Species EditText -->
    <EditText
        android:id="@+id/petSpeciesEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="e.g., Dog, Cat, Rabbit"
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/edit_text_background"
        android:layout_marginBottom="32dp"
        android:textSize="14sp" />

    <!-- Create Profile Button -->
    <Button
        android:id="@+id/createProfileButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Create Profile"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:layout_marginTop="16dp" />

</LinearLayout>